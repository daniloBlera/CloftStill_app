<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cloftstill.cloftstill.view.UserViewActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgIcon"
        android:src="@mipmap/cloftstill_icon"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUserName"
        android:layout_below="@+id/imgIcon"
        android:text="NOME:"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUserCPF"
        android:layout_below="@+id/txtUserName"
        android:text="CPF: "
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUserCPF"
        android:text="SERIAL SIM: "
        android:id="@+id/txtSerial"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMAC"
        android:layout_below="@+id/txtSerial"
        android:text="ENDEREÇO MAC: "
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCell"
        android:layout_below="@+id/txtMAC"
        android:text="CELULAR: "
        android:layout_marginTop="15dp"/>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_save"
        app:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aprovar Solicitação"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/floatingOk"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="6dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingDesaprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:backgroundTint="@color/colorPrimary"
        android:layout_above="@+id/floatingOk"
        android:layout_alignStart="@+id/floatingOk" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reprovar Solicitação"
        android:id="@+id/textView2"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/floatingOk"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>
