<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cloftstill.cloftstill.view.RegisterByAdminActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgIcon"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/cloftstill_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validade: "
        android:id="@+id/txtValidade"
        android:layout_below="@+id/imgIcon"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:id="@+id/txtDayStart"
        android:text="  Data de Inicio"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/txtValidade"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Data de Fim"
        android:id="@+id/txtDayEnd"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtDayStart"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtName"
        android:maxLines="1"
        android:layout_below="@+id/txtDayEnd"
        android:layout_centerHorizontal="true"
        android:hint="Nome"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtCPf"
        android:maxLines="1"
        android:layout_below="@+id/edtName"
        android:layout_centerHorizontal="true"
        android:hint="CPF"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPin"
        android:maxLines="1"
        android:layout_below="@+id/edtCPf"
        android:layout_centerHorizontal="true"
        android:hint="Senha Numérica(4 dígitos)"
        android:inputType="numberPassword"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtConfirmPin"
        android:maxLines="1"
        android:layout_below="@+id/edtPin"
        android:layout_centerHorizontal="true"
        android:hint="Confirme Senha"
        android:inputType="numberPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtCellPhone"
        android:maxLines="1"
        android:layout_below="@+id/edtConfirmPin"
        android:layout_centerHorizontal="true"
        android:hint="Celular"
        android:inputType="number"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/check_yes"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OK"
        android:id="@+id/textView2"
        android:layout_marginTop="17dp"
        android:layout_marginRight="6dp"
        android:layout_alignTop="@+id/fabOk"
        android:layout_toStartOf="@+id/fabOk" />

</RelativeLayout>
