<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cloftstill.cloftstill.view.SignUpActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgIcon"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/cloftstill_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgIcon"
        android:text="SERIAL SIM: "
        android:id="@+id/txtSerial"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMAC"
        android:layout_below="@+id/txtSerial"
        android:text="ENDEREÇO MAC: "
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtName"
        android:layout_below="@+id/spinnerUserType"
        android:layout_centerHorizontal="true"
        android:hint="Nome"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtCPf"
        android:layout_below="@+id/edtName"
        android:layout_centerHorizontal="true"
        android:hint="CPF"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPin"
        android:layout_below="@+id/edtCPf"
        android:layout_centerHorizontal="true"
        android:hint="Senha Numérica(4 dígitos)"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtConfirmPin"
        android:layout_below="@+id/edtPin"
        android:layout_centerHorizontal="true"
        android:hint="Confirme Senha"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtCellPhone"
        android:layout_below="@+id/edtConfirmPin"
        android:layout_centerHorizontal="true"
        android:hint="Celular"
        android:inputType="number"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSingUp"
        android:layout_below="@+id/edtCellPhone"
        android:text="CONFIRMAR"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerUserType"
        android:layout_below="@+id/txtMAC"/>


</RelativeLayout>
